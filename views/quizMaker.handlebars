

<div class="row mt-4">
  <div class="col-md-6">
    <h3 class = "purplefont">Make a Quiz!</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="quiz-name" class="purplefont">Quiz Name:</label>
        <input class="form-input" type="text" id="quiz-name" name="quiz-name" />
      </div>
      <div class="form-group">
        <label for="question" class="purplefont">Question:</label>
        <input class="form-input" type="text" id="question" name="question" />
      </div>
      <div class="form-group">
        <label for="project-desc" class="purplefont">Answer A</label>
        <textarea class="form-input" id="ans-a" name="ans-a"></textarea>
      </div>
      <div class="form-group">
        <label for="project-desc" class="purplefont">Answer B</label>
        <textarea class="form-input" id="ans-b" name="ans-b"></textarea>
      </div>
      <div class="form-group">
        <label for="project-desc" class="purplefont">Answer C</label>
        <textarea class="form-input" id="ans-c" name="ans-c"></textarea>
      </div>
      <div class="form-group">
        <label for="project-desc" class="purplefont">Answer D</label>
        <textarea class="form-input" id="ans-d" name="ans-d"></textarea>
      </div>
      <div class="form-group">
  <label for="project-desc" class="purplefont">Correct Answer:</label>
  <select class="form-input" id="correct-ans" name="correct-ans">
    <option value="A">A</option>
    <option value="B">B</option>
    <option value="C">C</option>
    <option value="D">D</option>
  </select>
</div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" id="btn-submit">Next Question</button>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">My Quiz is Done!</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/quiz-maker.js"></script>